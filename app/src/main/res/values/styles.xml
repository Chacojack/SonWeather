<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Design.AppBarLayout" parent="android:Widget" tools:override="true">
        <item name="elevation">0dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="divide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/one_px</item>
        <item name="android:background">@color/divide</item>
    </style>

    <style name="textView_style_normal">
        <item name="android:lineSpacingExtra">@dimen/dimen_4</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>

    <style name="textView_style_small_1" parent="textView_style_normal">
        <item name="android:textSize">@dimen/font_size_12</item>
    </style>


</resources>
