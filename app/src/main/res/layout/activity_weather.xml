<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_weather"
    >

    <RelativeLayout
        android:id="@+id/navigation_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/dimen_8"
        android:paddingTop="@dimen/dimen_8"
        android:paddingLeft="@dimen/dimen_16"
        android:paddingStart="@dimen/dimen_16"
        android:paddingRight="@dimen/dimen_16"
        android:paddingEnd="@dimen/dimen_16"
        >



        <LinearLayout
            android:id="@+id/ll_city_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="@dimen/dimen_8"
                android:layout_height="@dimen/dimen_8"
                android:layout_margin="@dimen/dimen_2"
                android:src="@drawable/bg_location_radio_in_weather"
                />

            <ImageView
                android:layout_width="@dimen/dimen_8"
                android:layout_height="@dimen/dimen_8"
                android:layout_margin="@dimen/dimen_2"
                android:scaleType="center"
                android:src="@drawable/bg_radio_in_weather"/>




        </LinearLayout>
        
        <jack.me.sonweather.ui.view.AwesomeFontView
            android:id="@+id/icon_city_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="@string/font_awesome_list"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/white"
            />


    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_weather"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigation_bar_container"
        />

    <View
        style="@style/divide"
        android:layout_above="@+id/navigation_bar_container"
        />

</RelativeLayout>


























